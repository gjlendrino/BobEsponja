<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewBobEsponja"
        android:layout_width="201dp"
        android:layout_height="250dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/bob_esponja_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bobesponja" />

    <ImageView
        android:id="@+id/imageViewLlamar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="64dp"
        android:contentDescription="@string/llamar"
        app:layout_constraintRight_toLeftOf="@+id/textViewLlamar"
        app:layout_constraintTop_toBottomOf="@id/imageViewBobEsponja"
        app:srcCompat="@android:drawable/ic_menu_call" />

    <TextView
        android:id="@+id/textViewLlamar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:onClick="gotoIncomingCallActivity"
        android:text="@string/llamar"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewBobEsponja" />

</androidx.constraintlayout.widget.ConstraintLayout>